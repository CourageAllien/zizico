{
  "version": 2,
  "builds": [
    { "src": "api/book.js", "use": "@vercel/node" },
    { "src": "index.html", "use": "@vercel/static" },
    { "src": "book.html", "use": "@vercel/static" },
    { "src": "styles.css", "use": "@vercel/static" },
    { "src": "script.js", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/styles.css", "dest": "/styles.css" },
    { "src": "/script.js", "dest": "/script.js" },
    { "src": "/api/book", "dest": "/api/book.js" },
    { "src": "/book", "dest": "/book.html" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
